<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.geektech.a2_homework7_firestore">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.geektech.a2_homework7_firestore.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.geektech.a2_homework7_firestore.login.PhoneActivity" />
        <activity
            android:name="com.geektech.a2_homework7_firestore.ui.onboard.OnBoardActivity"
            android:parentActivityName="com.geektech.a2_homework7_firestore.FormActivity" />
        <activity
            android:name="com.geektech.a2_homework7_firestore.ui.header.ProfileActivity"
            android:parentActivityName="com.geektech.a2_homework7_firestore.FormActivity" />
        <activity
            android:name="com.geektech.a2_homework7_firestore.FormActivity"
            android:parentActivityName="com.geektech.a2_homework7_firestore.MainActivity" />
        <activity
            android:name="com.geektech.a2_homework7_firestore.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>